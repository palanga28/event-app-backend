# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-min-64-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-64-chars
ACCESS_TOKEN_EXPIRES=15m
REFRESH_TOKEN_EXPIRES=7d

# Environment
NODE_ENV=development
PORT=3000

# Supabase Configuration
API_BASE_URL=https://your-project.supabase.co/rest/v1
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# WonyaSoft Payment Configuration (Mobile Money)
WONYASOFT_API_URL=https://api.wonyasoft.com
WONYASOFT_TOKEN=your-wonyasoft-api-token
WONYASOFT_REF_PARTENAIRE=your-partner-reference
WONYASOFT_CALLBACK_URL=http://localhost:3000/api/payments/webhook/wonyasoft

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Email Configuration (for password reset, welcome emails, etc.)
# Option 1: Gmail (recommended for testing)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# Option 2: Other SMTP providers
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USER=apikey
# EMAIL_PASSWORD=your-sendgrid-api-key

# Logging
LOG_LEVEL=debug
